      <div class="controls">
        <label style="color:rgba(231,238,252,0.7); font-size:13px;">Select Area:</label>
        <select id="areaSelect">
          <option value="All">All Areas</option>
          <option value="Academic Buildings">Academic Buildings</option>
          <option value="Student Services">Student Services</option>
          <option value="Athletics">Athletics</option>
        </select>
      </div>

      <div class="grid" id="lotsGrid"></div>

      <div class="note">
        Note: Status is demo data. This page does not allow booking or changes.
      </div>
    </div>
  </div>

  <script>
    // Protect page if not logged in
    function getSession() {
      try { return JSON.parse(localStorage.getItem("demo_session")); }
      catch { return null; }
    }
    const session = getSession();
    if (!session || !session.email) {
      window.location.href = "index.html";
    }

    const lots = [
      { name: "Nasso Family Science Centre", area: "Academic Buildings", status: "Open", info: "Near science labs and classrooms." },
      { name: "Mulroney", area: "Academic Buildings", status: "Open", info: "Central campus access." },
      { name: "Bloomfield", area: "Student Services", status: "Closed", info: "High demand area. Temporarily closed." },
      { name: "Bruce Brown", area: "Athletics", status: "Open", info: "Convenient for recreation and sports facilities." },
      { name: "Keating Centre", area: "Athletics", status: "Closed", info: "Maintenance in progress (demo status)." }
    ];

    const grid = document.getElementById("lotsGrid");
    const areaSelect = document.getElementById("areaSelect");

    function render(selectedArea) {
      grid.innerHTML = "";

      const filtered = selectedArea === "All"
        ? lots
        : lots.filter(l => l.area === selectedArea);

      filtered.forEach(lot => {
        const div = document.createElement("div");
        div.className = "lot" + (lot.status === "Closed" ? " closed" : "");
        div.innerHTML = `
          <h3>${lot.name}</h3>
          <p>Area: ${lot.area}</p>
          <p>${lot.info}</p>
          <div class="status">
            <span class="dot"></span>
            <span>${lot.status}</span>
          </div>
        `;
        grid.appendChild(div);
      });
    }

    areaSelect.addEventListener("change", () => render(areaSelect.value));
    render("All");
  </script>
</body>
